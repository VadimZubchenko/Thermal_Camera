<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="12dp"/>
            <gradient
                android:startColor="#888888"
                android:centerColor="#ECF1EC"
                android:centerY="0.5"
                android:endColor="#888888"

                android:angle="180"/>
            <stroke
                android:width="2dp"
                android:color="#FF000000"
                />
        </shape>
    </item>
    <item android:id="@android:id/progress">

        <layer-list>
                <item>
                    <clip
                        android:clipOrientation="vertical"
                        android:gravity="bottom">
                        <shape>
                            <corners android:radius="12dp" />
                            <gradient
                                android:startColor="#F82102"
                                android:endColor="#030CFB"
                                android:centerColor="#14FF03"
                                android:centerY="0.5"
                                android:angle="270"/>

                            <stroke
                                android:width="2dp"
                                android:color="#FF000000"
                                />
                        </shape>
                    </clip>
                </item>
            <item>
                <clip
                    android:clipOrientation="vertical"
                    android:gravity="fill_vertical">
                    <layer-list>
                        <item android:top="125dp">
                            <shape android:shape="line">
                                <stroke
                                    android:width="2dp"
                                    android:color="#FF000000" />
                            </shape>
                        </item>

                        <item android:bottom="125dp">
                            <shape android:shape="line">
                                <stroke
                                    android:width="2dp"
                                    android:color="#FF000000" />
                            </shape>
                        </item>


                    </layer-list>
                </clip>
            </item>



            </layer-list>

    </item>


</layer-list>